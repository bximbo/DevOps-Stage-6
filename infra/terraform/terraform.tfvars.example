# Copy this to terraform.tfvars and update your values

# AWS / General Configuration
aws_region     = "eu-north-1"
environment    = "production"
owner_email    = "israelabimbolaa@gmail.com"

# Compute / EC2
instance_type  = "t3.medium"
volume_size    = 30

# SSH Configuration
key_name            = "todo-app-key"
ssh_public_key      = "YOUR_PUBLIC_KEY_CONTENT_HERE"
ssh_private_key_path = "~/.ssh/todo-app-key"
ssh_user            = "ubuntu"

# Networking / Security
allowed_ssh_cidr = ["0.0.0.0/0"]

# Application
domain_name  = "israelabimbola.com"
deploy_user  = "deploy"
app_repo     = "https://github.com/bximbo/DevOps-Stage-6.git"
